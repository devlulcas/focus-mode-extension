{
  "manifest_version": 3,
  "name": "Focus Mode",
  "version": "1.0",
  "description": "Block distracting websites and stay focused.",
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ]
}
